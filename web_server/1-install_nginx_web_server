#!/usr/bin/env bash
# This script installs and configures Nginx to serve a page with "Holberton School"

# Update package lists
sudo apt update -y

# Install nginx
sudo apt install -y nginx

# Ensure the nginx service is enabled
sudo systemctl enable nginx

# Set up the index.html file with "Holberton School"
echo "Holberton School" | sudo tee /var/www/html/index.html

# Configure nginx to listen on port 80 and serve the correct page
# Editing the default nginx configuration to serve files from /var/www/html
sudo bash -c 'cat > /etc/nginx/sites-available/default <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF'

# Reload nginx without using systemctl
sudo nginx -s reload

# Confirm that Nginx is serving the page
curl http://localhost
